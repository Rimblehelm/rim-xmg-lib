{
  "compilerOptions": {
    "target": "ES2019",
    "module": "NodeNext",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}